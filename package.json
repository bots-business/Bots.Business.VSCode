{
  "name": "bots-business",
  "displayName": "Bots.Business",
  "description": "Create your bot with Bots.Business",
  "version": "0.0.2",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/bots-business/Bots.Business.VSCode"
  },
  "publisher": "Bots.Business",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "BB:login",
        "title": "BB: Login to BB account"
      },
      {
        "command": "bots.business.addCommand",
        "title": "Add Command",
        "icon": {
          "light": "./resources/light/add.svg",
          "dark": "./resources/dark/add.svg"
        }                   
      },
      {
        "command": "BB.deleteItem",
        "title": "Delete"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "bots.business.addCommand",
          "when": "view == botTreeView && viewItem == bot || viewItem == folder",
          "group": "inline"
        }
      ]
    },
    "views": {
      "BBView": [
        {
          "id": "botTreeView",
          "name": "Bots"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "BBView",
          "title": "Bots.Business",
          "icon": "images/icon.svg"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "BB.newCommand",
          "when": "view == botTreeView && viewItem =~ /^(bot|folder)$/",
          "group": "navigation"
        },
        {
          "command": "BB.deleteItem",
          "when": "view == botTreeView && viewItem =~ /^(bot|folder|command)$/",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "Bots.Business",
        "properties": {
          "bots-business.apiKey": {
            "type": "password",
            "default": "",
            "description": "Bots.Business API Key"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "axios": "^1.3.4"
  }
}
